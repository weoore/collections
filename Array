using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApplication31
{
    class Program
    {
        static void Main(string[] args)
        {
            int[] array = new int[5] { 6, 3, 1, 9, 4 };
            int[] array2 = new int[5] { 6, 3, 1, 9, 4 };
            int[] array3 = new int[5] { 6, 3, 1, 9, 4 };
            int[] array4 = new int[5] { 6, 3, 1, 9, 4 };
            int[] new_array = new int[5];
            bool Menu = true;
            do
            {
                Console.Write("Изначальный массив: " + "{");
                foreach (int i in array)
                    Console.Write(i + " ");
                Console.Write("}");
                Console.WriteLine();
                Console.WriteLine();
                Console.WriteLine("[1] - Lenght ");
                Console.WriteLine();
                Console.WriteLine("[2] - Rank ");
                Console.WriteLine();
                Console.WriteLine("[3] - Copy ");
                Console.WriteLine();
                Console.WriteLine("[4] - Reverse ");
                Console.WriteLine();
                Console.WriteLine("[5] - Sort");
                Console.WriteLine();
                Console.WriteLine("[6] - Clear");
                Console.WriteLine();
                Console.WriteLine("[7] - BinarySearch");
                Console.WriteLine();
                Console.WriteLine("[8] - FindAll");
                Console.WriteLine();
                Console.WriteLine("[9] - TrueForAll");
                Console.WriteLine();
                Console.WriteLine("[0] - Выход из программы");
                Console.WriteLine();
                int user_input = Convert.ToInt32(Console.ReadLine());
                Console.Clear();
                switch (user_input)
                {
                    case 1:
                        Console.WriteLine("Длина массива: " + array.Length);
                        Console.ReadKey();
                        break;
                    case 2:
                        Console.WriteLine("Ранг массива: " + array.Rank);
                        Console.ReadKey();
                        break;
                    case 3:
                        Array.Copy(array, new_array, 5);
                        foreach (int i in new_array)
                            Console.Write(i + " ");
                        Console.ReadKey();
                        break;
                    case 4:
                        foreach (int j in array3.Reverse())
                            Console.Write(j + "  ");
                        Console.ReadKey();
                        break;
                    case 5:
                        Array.Sort(array4, 0, 5);
                        foreach (int l in array4)
                            Console.Write(l + "  ");
                        Console.ReadKey();
                        break;
                    case 6:
                        Array.Clear(array2, 0, 5);
                        foreach (int e in array2)
                            Console.Write(e + "  ");
                        Console.ReadKey();
                        break;
                    case 7:
                        foreach (int t in array)
                            Console.Write(t + "  ");
                        Console.WriteLine();
                        Console.WriteLine("Введите элемент массива");
                        int s = Convert.ToInt32(Console.ReadLine());
                        Console.WriteLine("Номер вхождения элемента " + Array.BinarySearch(array, 0, 5, s));
                        Console.ReadKey();
                        break;
                    case 8:

                        foreach (int i in array)
                            Console.Write(i + "  ");
                        Console.ReadKey();
                        break;
                    case 9:
                        Console.WriteLine("Введите размерность массива");
                        int r = Convert.ToInt32(Console.ReadLine());
                        int[] a = new int[r];
                        Console.WriteLine("Введите массив");
                        for (int i = 0; i < r; i++)
                        {
                            a[i] = Convert.ToInt32(Console.ReadLine());
                        }
                        Console.Clear();
                        Console.Write("Заданный массив ");
                        foreach (int y in a)
                            Console.Write(y + " ");
                        Console.WriteLine();
                        Console.WriteLine("[1] - проверить все ли элементы массива четные");
                        Console.WriteLine("[2] - проверить все ли элементы массива нечетные");
                        int vod = Convert.ToInt32(Console.ReadLine());
                        Console.Clear();
                        Console.WriteLine("[1] - проверить все ли элементы массива четные");
                        Console.WriteLine("[2] - проверить все ли элементы массива нечетные");
                        Console.Clear();
                        Console.Clear();
                        if (vod == 1)
                        {
                            bool result = Array.TrueForAll(a, y => y % 2 == 0);
                            if (result == true)
                            {
                                Console.WriteLine("Верно");
                            }
                            else
                            {
                                Console.WriteLine("Неверно");
                            }
                        }
                        else if (vod == 2)
                        {
                            bool result1 = Array.TrueForAll(a, y => y % 2 == 1);
                            Console.WriteLine(result1);
                        }
                        Console.ReadKey();
                        break;
                    case 0:
                        Menu = false;
                        break;
                }
                Console.Clear();
            }
            while (Menu);
        }
    }
}
